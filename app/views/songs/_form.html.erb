<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :rating %><br>
    <%= f.select :rating, [1, 2, 3, 4, 5], {:include_blank => 'Select a rating'} %>  <!-- adding drop down, use .select here since we're not pulling from a collection and actually selecting a number. -->
  </div>
  <div class="field">
    <%= f.label :artist_id %><br>
    <%= f.collection_select :artist_id, @artists, :id, :name, {:include_blank => 'Select an Artist'} %>   <!-- # providing a drop down of artists -->
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
