<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Song Name' %>
  </div>
  <div class="form-group">
    <!-- <%= f.label :rating %><br> -->
    <%= f.select :rating, [1, 2, 3, 4, 5], {:include_blank => 'Select a rating'}, class: 'form-control' %>  <!-- adding drop down, use .select here since we're not pulling from a collection and actually selecting a number. -->
  </div>
  <div class="form-group">
    <!-- <%= f.label :artist_id %><br> -->
    <%= f.collection_select :artist_id, @artists, :id, :name, {:include_blank => 'Select an Artist'}, class: 'form-control' %>   <!-- # providing a drop down of artists -->
  </div>


  <div class="form-group">
    <%= f.text_field :video, class: 'form-control', placeholder: 'YouTube Video Link' %>
  </div>

  
  <div class="actions">
    <%= f.submit class: 'btn btn-default' %>
  </div>
<% end %>
